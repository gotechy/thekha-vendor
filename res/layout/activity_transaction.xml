<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >
    
    <TextView android:id="@+id/transaction_regularlable" style="@style/sectionHeader"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:text="Regular Placement" android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView android:id="@+id/business_facebook"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:layout_marginTop="10dp" android:layout_marginLeft="6dp"
			android:text="@string/facebook" android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
