<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BusinessActivity" >
    
    <ImageView
        android:id="@+id/business_picture"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/profile_image_height"
        android:cropToPadding="true"
        android:layout_gravity="fill"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/description"
        android:src="@drawable/hotel" />
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal" >
        
        <TextView
        	android:id="@+id/business_name"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Business_Name"
        	android:textAppearance="?android:attr/textAppearanceLarge" />

    	<TextView
        	android:id="@+id/business_type"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignBottom="@+id/business_name"
        	android:layout_alignParentRight="true"
        	android:text="Business Type"
        	android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>
    
    
    <TextView
        android:id="@+id/business_facilities"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="AC | Smoking | Veg | Non-Veg | Mujra"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ScrollView
        android:id="@+id/business_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/business_phonelable"
                style="@style/sectionHeader"
        		android:layout_width="match_parent"
                android:layout_height="wrap_content"
        		android:text="@string/phone"
        		android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/business_phone1"
        		android:layout_width="match_parent"
                android:layout_height="wrap_content"
        		android:text="@string/phone"
        		android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/business_phone2"
        		android:layout_width="match_parent"
                android:layout_height="wrap_content"
        		android:text="@string/phone"
        		android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/business_addresslable"
                style="@style/sectionHeader"
        		android:layout_width="match_parent"
                android:layout_height="wrap_content"
        		android:text="@string/address"
        		android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/business_address"
        		android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
        		android:text="@string/address"
        		android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/business_emaillable"
                style="@style/sectionHeader"
        		android:layout_width="match_parent"
                android:layout_height="wrap_content"
        		android:text="@string/email"
        		android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/business_email"
        		android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
        		android:text="@string/email"
        		android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/business_facebooklable"
                style="@style/sectionHeader"
        		android:layout_width="match_parent"
                android:layout_height="wrap_content"
        		android:text="@string/facebook"
        		android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/business_facebook"
        		android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
        		android:text="@string/facebook"
        		android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/business_websitelable"
                style="@style/sectionHeader"
        		android:layout_width="match_parent"
                android:layout_height="wrap_content"
        		android:text="@string/website"
        		android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/business_website"
        		android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
        		android:text="@string/website"
        		android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
</LinearLayout>