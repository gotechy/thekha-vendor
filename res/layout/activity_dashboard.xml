<?xml version="1.0" encoding="UTF-8"?>
<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/drawer_layout"
	android:layout_width="match_parent" android:layout_height="match_parent">

	<FrameLayout android:id="@+id/content_frame"
		android:layout_width="match_parent" android:layout_height="match_parent">
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="match_parent" android:orientation="vertical"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:paddingTop="@dimen/activity_vertical_margin"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin">

			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:paddingTop="@dimen/dashboard_items_vertical_padding"
				android:paddingBottom="@dimen/dashboard_items_vertical_padding"
				android:background="@drawable/dashboard_item_background">

				<TextView android:id="@+id/dashboard_businessListingLable"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true" android:text="@string/businessListingLable"
					android:textAppearance="?android:attr/textAppearanceLarge" />

				<ImageView android:id="@+id/dashboard_businessListing"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true" android:src="@drawable/ic_action_warning"
					android:contentDescription="@string/businessListingDescription" />
			</RelativeLayout>

			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:paddingTop="@dimen/dashboard_items_vertical_padding"
				android:paddingBottom="@dimen/dashboard_items_vertical_padding"
				android:background="@drawable/dashboard_item_background">

				<TextView android:id="@+id/dashboard_productLable"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true" android:text="@string/productLable"
					android:textAppearance="?android:attr/textAppearanceMedium" />

				<TextView android:id="@+id/dashboard_product"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true" android:text="@string/productLable"
					android:textAppearance="?android:attr/textAppearanceMedium" />
			</RelativeLayout>

			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content" android:orientation="vertical"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:background="@drawable/dashboard_item_background">
				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:paddingTop="@dimen/dashboard_items_vertical_padding"
					android:paddingBottom="@dimen/dashboard_items_vertical_padding">

					<TextView android:id="@+id/dashboard_profilelable"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true" android:text="@string/productLable"
						android:textAppearance="?android:attr/textAppearanceMedium" />

					<ProgressBar android:id="@+id/dashboard_profile"
						android:layout_width="150dp" android:layout_height="wrap_content"
						style="?android:attr/progressBarStyleHorizontal"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true" android:text="@string/productLable"
						android:textAppearance="?android:attr/textAppearanceMedium" />
				</RelativeLayout>

				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:paddingTop="@dimen/dashboard_items_vertical_padding"
					android:paddingBottom="@dimen/dashboard_items_vertical_padding">

					<TextView android:id="@+id/dashboard_productviewLable"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true" android:text="@string/productviewLable"
						android:textAppearance="?android:attr/textAppearanceMedium" />

					<Spinner android:id="@+id/dashboard_productviewtype"
						android:layout_width="100dp" android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true" />

					<TextView android:id="@+id/dashboard_productview"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toLeftOf="@id/dashboard_productviewtype"
						android:layout_centerVertical="true" android:text="@string/productviewLable"
						android:textAppearance="?android:attr/textAppearanceMedium" />

				</RelativeLayout>
			</LinearLayout>

			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content" android:orientation="vertical"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:background="@drawable/dashboard_item_background">
				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:paddingTop="@dimen/dashboard_items_vertical_padding"
					android:paddingBottom="@dimen/dashboard_items_vertical_padding">

					<TextView android:id="@+id/dashboard_dealsavtivelable"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true" android:text="@string/dealsavtivelable"
						android:textAppearance="?android:attr/textAppearanceMedium" />

					<TextView android:id="@+id/dashboard_dealsavtive"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true" android:text="@string/dealsavtivelable"
						android:textAppearance="?android:attr/textAppearanceMedium" />

					<ImageView android:id="@+id/dashboard_dealsaddbutton"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toLeftOf="@id/dashboard_dealsavtive"
						android:paddingRight="10dp" android:layout_centerVertical="true"
						android:text="@string/productLable" android:src="@drawable/ic_action_new"
						android:contentDescription="@string/dealsaddbutton" />


				</RelativeLayout>

				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:paddingTop="@dimen/dashboard_items_vertical_padding"
					android:paddingBottom="@dimen/dashboard_items_vertical_padding">

					<TextView android:id="@+id/dashboard_dealstilllable"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true" android:text="@string/dealstilllable"
						android:textAppearance="?android:attr/textAppearanceMedium" />

					<TextView android:id="@+id/dashboard_dealstill"
						android:layout_width="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true" android:layout_height="wrap_content"
						android:text="@string/dealstilllable" android:textAppearance="?android:attr/textAppearanceMedium" />

				</RelativeLayout>
			</LinearLayout>

			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:paddingTop="@dimen/dashboard_items_vertical_padding"
				android:paddingBottom="@dimen/dashboard_items_vertical_padding"
				android:background="@drawable/dashboard_item_background">

				<TextView android:id="@+id/dashboard_creditlable"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true" android:text="@string/creditlable"
					android:textAppearance="?android:attr/textAppearanceMedium" />

				<TextView android:id="@+id/dashboard_credit"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true" android:text="@string/creditlable"
					android:textAppearance="?android:attr/textAppearanceMedium" />

				<ImageView android:id="@+id/dashboard_creditaddbutton"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_toLeftOf="@id/dashboard_credit"
					android:paddingRight="10dp" android:layout_centerVertical="true"
					android:text="@string/creditlable" android:src="@drawable/ic_action_new"
					android:contentDescription="@string/dealsaddbutton" />

			</RelativeLayout>

			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content" android:orientation="vertical"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:background="@drawable/dashboard_item_background">
				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:paddingTop="@dimen/dashboard_items_vertical_padding"
					android:paddingBottom="@dimen/dashboard_items_vertical_padding">

					<TextView android:id="@+id/dashboard_advertisinglable"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true" android:text="@string/dealsavtivelable"
						android:textAppearance="?android:attr/textAppearanceMedium" />

					<TextView android:id="@+id/dashboard_advertising"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true" android:text="@string/dealsavtivelable"
						android:textAppearance="?android:attr/textAppearanceMedium" />

				</RelativeLayout>

				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:paddingTop="@dimen/dashboard_items_vertical_padding"
					android:paddingBottom="@dimen/dashboard_items_vertical_padding">

					<TextView android:id="@+id/dashboard_bannerlable"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true" android:text="@string/bannerlable"
						android:textAppearance="?android:attr/textAppearanceMedium" />

					<TextView android:id="@+id/dashboard_banner"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true" android:text="@string/bannerlable"
						android:textAppearance="?android:attr/textAppearanceMedium" />

				</RelativeLayout>

				<RelativeLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:paddingTop="@dimen/dashboard_items_vertical_padding"
					android:paddingBottom="@dimen/dashboard_items_vertical_padding">

					<TextView android:id="@+id/dashboard_clickslable"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true" android:text="@string/dealsavtivelable"
						android:textAppearance="?android:attr/textAppearanceMedium" />

					<TextView android:id="@+id/dashboard_clicks"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true" android:text="@string/clickslable"
						android:textAppearance="?android:attr/textAppearanceMedium" />

				</RelativeLayout>
			</LinearLayout>

		</LinearLayout>

	</FrameLayout>

	<ListView android:id="@+id/left_drawer" android:layout_width="240dp"
		android:layout_height="match_parent" android:layout_gravity="start"
		android:choiceMode="singleChoice" android:divider="@android:color/darker_gray"
		android:dividerHeight="1dp" android:background="@android:color/background_light" />
</android.support.v4.widget.DrawerLayout>
