<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/contactus_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contactus_name_hint"
        android:inputType="textCapWords" />

    <Spinner
        android:id="@+id/contactus_type"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/contactus_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contactus_phone_hint"
        android:inputType="phone" />

    <EditText
        android:id="@+id/contactus_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contactus_email_hint"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/contactus_subject"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contactus_subject_hint"
        android:inputType="text" />

    <EditText
        android:id="@+id/contactus_message"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:gravity="top"
        android:hint="@string/contactus_message_hint"
        android:inputType="text"
        android:padding="4dp" />

</LinearLayout>