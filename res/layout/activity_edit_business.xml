<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditBusinessActivity" >
    
    <ImageView
        android:id="@+id/editbusiness_picture"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/profile_image_height"
        android:cropToPadding="true"
        android:layout_gravity="fill"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/description"
        android:src="@drawable/hotel" />
    
    <Button
        android:id="@+id/editbusiness_picture_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_picture" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        
        <EditText
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:id="@+id/editbusiness_phone"
        	android:layout_weight="2"
        	android:layout_gravity="left"
        	android:ems="10"
        	android:hint="@string/phone"
        	android:inputType="phone" >
    	</EditText>
    	
    	<ImageButton
        	android:id="@+id/editbusiness_phoneremove"
        	android:layout_width="wrap_content"
        	android:layout_weight="1"
        	android:layout_height="wrap_content"
        	android:layout_gravity="right" 
        	android:maxHeight="10dp" 
        	android:maxWidth="10dp"
        	android:contentDescription="@string/phoneremove" />
    </LinearLayout>
    
<ScrollView
        android:id="@+id/editbusiness_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical" >
    
    <EditText
        android:id="@+id/editbusiness_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:hint="@string/business_name" >
        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/editbusiness_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/business_type"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:ems="10" />
    
    <TextView
        android:id="@+id/editbusiness_facilitieslable"
        style="@style/sectionHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/facilities"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <CheckBox
        android:id="@+id/check_ac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ac" />
    <CheckBox
        android:id="@+id/check_sa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sa" />
    <CheckBox
        android:id="@+id/check_vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vp" />
    <CheckBox
        android:id="@+id/check_cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cc" />
    <CheckBox
        android:id="@+id/check_veg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/veg" />
    <CheckBox
        android:id="@+id/check_nonveg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nonveg" />

    <TextView
        android:id="@+id/editbusiness_contactlable"
        style="@style/sectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <ListView
        android:id="@+id/editbusiness_phonelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress"
        tools:ignore="NestedScrolling" />
    
    <EditText
        android:id="@+id/editbusiness_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/website"
        android:ems="10"
        android:inputType="textUri" />
    
    <EditText
        android:id="@+id/editbusiness_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/facebook"
        android:ems="10"
        android:inputType="textUri" />
    
    <EditText
        android:id="@+id/editbusiness_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:ems="10"
        android:inputType="textEmailAddress" />
    
    <TextView
        android:id="@+id/editbusiness_addresslable"
        style="@style/sectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <EditText
        android:id="@+id/editbusiness_addressline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Address Line 1"
        android:inputType="textCapWords"
        tools:ignore="HardcodedText" />
    
    <EditText
        android:id="@+id/editbusiness_addressline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address Line 2"
        android:ems="10"
        android:inputType="textCapWords" />
    
    <EditText
        android:id="@+id/editbusiness_locality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Locality"
        android:ems="10"
        android:inputType="textCapWords" />
    
    <EditText
        android:id="@+id/editbusiness_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        android:ems="10"
        android:inputType="textCapWords" />
    
    <AutoCompleteTextView
        android:id="@+id/editbusiness_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="State"
        android:ems="10"
        android:inputType="textCapWords" />
    
    <EditText
        android:id="@+id/editbusiness_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Country"
        android:ems="10"
        android:inputType="textCapWords" />
    
    <EditText
        android:id="@+id/editbusiness_pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pincode"
        android:ems="10"
        android:inputType="number" />
	</LinearLayout>
</ScrollView>
</LinearLayout>