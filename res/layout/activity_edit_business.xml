<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/business_scrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".EditBusinessActivity" >

        <ImageView
            android:id="@+id/editbusiness_picture"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/profile_image_height"
            android:layout_gravity="fill"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <Button
            android:id="@+id/editbusiness_picture_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_picture" />
        
        <TextView
            android:id="@+id/editbusiness_picture_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Select cover image of size less then 1MB."
            android:textStyle="italic"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editbusiness_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/business_name"
                android:inputType="textCapWords" />
            <Spinner
                android:id="@+id/editbusiness_type"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/business_type" />

            <TextView
                android:id="@+id/editbusiness_facilitieslable"
                style="@style/sectionHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/facilities"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:id="@+id/check_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ac" />

            <CheckBox
                android:id="@+id/check_sa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sa" />

            <CheckBox
                android:id="@+id/check_vp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vp" />

            <CheckBox
                android:id="@+id/check_cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cc" />

            <CheckBox
                android:id="@+id/check_veg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/veg" />

            <CheckBox
                android:id="@+id/check_nonveg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nonveg" />

            <TextView
                android:id="@+id/editbusiness_contactlable"
                style="@style/sectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editbusiness_phone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Phone1"
                android:inputType="phone" />

            <EditText
                android:id="@+id/editbusiness_phone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Phone2"
                android:inputType="phone" />

            <EditText
                android:id="@+id/editbusiness_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/website"
                android:inputType="textUri" />

            <EditText
                android:id="@+id/editbusiness_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/facebook"
                android:inputType="textUri" />

            <EditText
                android:id="@+id/editbusiness_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/editbusiness_addresslable"
                style="@style/sectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editbusiness_addressline1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Address Line 1"
                android:inputType="textCapWords"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/editbusiness_addressline2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Address Line 2"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/editbusiness_locality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Locality"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/editbusiness_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="City"
                android:inputType="textCapWords" />

            <AutoCompleteTextView
                android:id="@+id/editbusiness_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="State"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/editbusiness_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Country"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/editbusiness_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Pincode"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>