<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditBusinessActivity" >
    
    <ImageView
        android:id="@+id/editbusiness_picture"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/profile_image_height"
        android:cropToPadding="true"
        android:layout_gravity="fill"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/description"
        android:src="@drawable/hotel" />
    
    <Button
        android:id="@+id/editbusiness_picture_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_picture" />
    
<ScrollView
        android:id="@+id/editbusiness_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >
    
    <EditText
        android:id="@+id/editbusiness_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:inputType="textPersonName"
        android:hint="@string/business_name" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/editbusiness_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editbusiness_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:hint="@string/business_type"
        android:ems="10" />
    
    <TextView
        android:id="@+id/editbusiness_facilitieslable"
        style="@style/sectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editbusiness_type"
        android:text="@string/facilitieslable"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <CheckBox
        android:id="@+id/check_ac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editbusiness_facilitieslable"
        android:text="@string/ac" />
    <CheckBox
        android:id="@+id/check_sa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/check_ac"
        android:text="@string/sa" />
    <CheckBox
        android:id="@+id/check_vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/check_sa"
        android:text="@string/vp" />
    <CheckBox
        android:id="@+id/check_cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/check_vp"
        android:text="@string/cc" />
    <CheckBox
        android:id="@+id/check_veg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/check_cc"
        android:text="@string/veg" />
    <CheckBox
        android:id="@+id/check_nonveg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/check_veg"
        android:text="@string/nonveg" />

    <TextView
        android:id="@+id/editbusiness_contactlable"
        style="@style/sectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/check_nonveg"
        android:text="@string/facilitieslable"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editbusiness_contactlable"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPostalAddress" />    
	
</RelativeLayout>
</ScrollView>
</LinearLayout>