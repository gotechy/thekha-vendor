<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Section Header Style -->
    <style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">15sp</item>
    </style>

    
    <style name="dateTimeText" parent="android:Widget.Holo.Spinner">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">@color/dateTimeText</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="dv_deal_title" parent="android:Widget.Holo.Light.TextView">
        <item name="android:padding">4dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="dv_deal_desc" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">72dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dateTimeText</item>
    </style>

    <style name="dv_deal_edit_image" parent="">
        <item name="android:padding">6dp</item>
        <item name="android:height">60dp</item>
        <item name="android:width">60dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dateTimeText</item>
    </style>
    
    
</resources>
